{
  "name": "windsurf-feedback-panel",
  "displayName": "Windsurf Feedback Panel",
  "description": "侧边栏交互反馈面板，支持 MCP 协议",
  "version": "2.0.6",
  "publisher": "fhyfhy17",
  "repository": {
    "type": "git",
    "url": "https://github.com/fhyfhy17/panel-feedback.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "feedback-panel",
          "title": "Panel Feedback",
          "icon": "resources/feedback.svg"
        }
      ]
    },
    "views": {
      "feedback-panel": [
        {
          "type": "webview",
          "id": "feedbackPanel.view",
          "name": "Panel Feedback",
          "visibility": "collapsed"
        }
      ]
    },
    "commands": [
      {
        "command": "feedbackPanel.submit",
        "title": "Submit Feedback"
      },
      {
        "command": "feedbackPanel.copyMcpConfig",
        "title": "Panel Feedback: Copy MCP Config"
      },
      {
        "command": "feedbackPanel.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "feedbackPanel.clearHistory",
        "title": "Clear History",
        "icon": "$(trash)"
      },
      {
        "command": "feedbackPanel.openInEditor",
        "title": "Panel Feedback: 在编辑器中打开",
        "icon": "$(link-external)"
      },
      {
        "command": "feedbackPanel.focus",
        "title": "Panel Feedback: 打开面板"
      }
    ],
    "configuration": {
      "title": "Panel Feedback",
      "properties": {
        "feedbackPanel.defaultOpenInEditor": {
          "type": "boolean",
          "default": true,
          "description": "启动时默认在编辑器 Tab 中打开面板"
        },
        "feedbackPanel.minWidth": {
          "type": "number",
          "default": 280,
          "description": "面板最小宽度（像素）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "prepackage": "npm version patch --no-git-tag-version && node -e \"const fs=require('fs');if(!fs.existsSync('release'))fs.mkdirSync('release')\"",
    "package": "vsce package -o release/",
    "postpackage": "node -e \"const fs=require('fs'),p=require('path'),d='release';if(fs.existsSync(d)){const f=fs.readdirSync(d).filter(x=>x.endsWith('.vsix')).map(x=>({n:x,t:fs.statSync(p.join(d,x)).mtimeMs})).sort((a,b)=>b.t-a.t);f.slice(5).forEach(x=>fs.unlinkSync(p.join(d,x.n)))}\""
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0"
  }
}
